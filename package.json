{
  "name": "sangtoo",
  "version": "0.0.1",
  "description": "A simple starter Angular2 project",
  "scripts": {
    "origstart": "./node_modules/.bin/webpack-dev-server --inline --colors --progress --display-error-details --display-cached --port 3000  --content-base src",
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "build": "./node_modules/.bin/webpack --inline --colors --progress --display-error-details --display-cached",
    "watch": "npm run build -- --watch",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server -c lite-server-config.json",
    "typings-install": "./node_modules/.bin/typings install",
    "postinstall": "npm run typings-install",
    
    "live": "live-server",
    "test": "live-server --open=tests.html",
    "test:w": "concurrent \"npm run tsc:w\" \"npm run test\" "
  },
  "dependencies": {
    "angular2": "2.0.0-beta.13",
    "systemjs": "0.19.25",
    "core-js": "^2.2.0",
    "rxjs": "5.0.0-beta.2",
    "zone.js": "~0.6.6"
  },
  "devDependencies": {
    "awesome-typescript-loader": "~0.16.2",
    "concurrently": "^2.0.0",
    "del": "^2.2.0",
    "es6-promise": "3.0.2",
    "es6-shim": "0.35.0",
    "gulp": "^3.9.1",
    "jasmine-core": "2.4.1",
    "lite-server": "^2.2.0",
    "live-server": "^0.9.2",
    "reflect-metadata": "0.1.2",
    "source-map-loader": "^0.1.5",
    "typescript": "~1.8.9",
    "typings": "^0.7.9",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0",
    "webpack-merge": "^0.8.4"
  }
}
