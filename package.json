{
  "name": "sangtoo",
  "version": "0.0.1",
  "description": "A simple starter Angular2 project",
  "scripts": {
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" \"npm run test\" ",
    "test": "live-server --open=src/unit-tests.html",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "typings-install": "./node_modules/.bin/typings install",
    "postinstall": "npm run typings-install",
    
    "live": "live-server",
    "test:w": "concurrent \"npm run tsc:w\" \"npm run test\" "

  },
  "dependencies": {
    "angular2": "2.0.0-beta.14",
    "systemjs": "0.19.25",
    "es6-shim": "0.35.0",
    "reflect-metadata": "0.1.2",
    "core-js": "^2.2.0",
    "rxjs": "5.0.0-beta.2",
    "zone.js": "~0.6.6"
  },
  "devDependencies": {
    "concurrently": "^2.0.0",
    "del": "^2.2.0",

    "gulp": "^3.9.1",
    "jasmine-core": "2.4.1",
    "lite-server": "^2.2.0",
    "live-server": "^0.9.2",

    "typescript": "~1.8.9",
    "typings": "^0.7.12"
  }
}
